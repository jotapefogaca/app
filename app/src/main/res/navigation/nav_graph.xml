<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginActivity">

    <activity
        android:id="@+id/LoginActivity"
        android:name="com.example.email.LoginActivity"/>

    <activity
        android:id="@+id/MainActivity"
        android:name="com.example.email.MainActivity"/>

    <activity
        android:id="@+id/ForgotPasswordActivity"
        android:name="com.example.email.ForgotPasswordActivity"/>

    <activity
        android:id="@+id/RegisterActivity"
        android:name="com.example.email.RegisterActivity"/>

    <action android:id="@+id/action_LoginActivity_to_MainActivity"
        app:destination="@id/MainActivity" />
    <action android:id="@+id/action_LoginActivity_to_ForgotPasswordActivity"
        app:destination="@id/ForgotPasswordActivity" />
    <action android:id="@+id/action_LoginActivity_to_RegisterActivity"
        app:destination="@id/RegisterActivity" />

</navigation>
